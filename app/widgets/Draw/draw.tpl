<div id="draw">
    <canvas id="draw-background"></canvas>
    <canvas id="draw-canvas">¯\_(ツ)_/¯</canvas>
    <div class="draw-control">
        <button id="draw-clear">Clear</button>
        <button id="draw-save">Send</button>
        <ul class="draw-widths">
            <li><span data-width="small"></span></li>
            <li><span data-width="medium"></span></li>
            <li><span data-width="big"></span></li>
        </ul>
        <ul class="draw-colors">
            <li><span data-color="blue"></span></li>
            <li><span data-color="red"></span></li>
            <li><span data-color="green"></span></li>
            <li><span data-color="purple"></span></li>
            <li><span data-color="black"></span></li>
        </ul>
        <div class="draw-eraser"></div>
    </div>
    <ul class="list controls">
        <li>
            <span id="drawback" class="primary icon color transparent active">
                <i class="material-icons">arrow_back</i>
            </span>
            <span id="drawclose" class="control icon color transparent active">
                <i class="material-icons">close</i>
            </span>
        </li>
    </ul>
</div>